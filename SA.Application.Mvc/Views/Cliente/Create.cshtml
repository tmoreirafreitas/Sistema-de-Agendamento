@model SA.Service.ViewModels.ClienteViewModel
@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <form asp-controller="Cliente" asp-action="Create" method="post">
        <div class="form-group row">
            @Html.LabelFor(model => model.Nome)
            <input class="form-control" asp-for="Nome" />                      
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Cnpj)
            <input class="form-control" asp-for="Cnpj" />
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Estado)
            <input class="form-control" asp-for="Estado" />
        </div>
        <div class="form-group row">
            <button class="btn btn-default" type="submit">Salvar</button>
        </div>
    </form>
</div>