
@{
    ViewData["Title"] = "Número de processos acima de:";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="form-group row">
        <span>
            <a class="btn btn-default" asp-area="" asp-controller="Processo" asp-action="Index">Lista de Processos</a>
        </span>
    </div>
    <form asp-area="" asp-controller="Processo" asp-action="NumberProcessValueAbove">
        <div class="form-group row">
            <label>Valor</label>
            <input class="form-control" name="valor" id="valor" />
        </div>
        <div class="form-group row">
            <button class="btn btn-default" type="submit">Pesquisar</button>
        </div>
    </form>
    @if (ViewData["ProcessNumber"] != null)
    {
        <label>Pesquisar: @ViewData["ProcessNumber"]</label>
    }
</div>