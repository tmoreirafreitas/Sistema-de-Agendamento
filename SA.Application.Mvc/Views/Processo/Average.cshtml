
@{
    ViewData["Title"] = "Media dos valores dos processos";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="form-group row">
        <span>
            <a class="btn btn-default" asp-area="" asp-controller="Processo" asp-action="Index">Lista de Processos</a>
        </span>
    </div>
    <form asp-area="" asp-controller="Processo" asp-action="Average">
        <div class="form-group row">
            <label>Nome do Cliente</label>
            <input class="form-control" name="nomeCliente" id="nomeCliente" />
        </div>
        <div class="form-group row">
            <label>Estado</label>
            <input class="form-control" name="estado" id="estado" />
        </div>
        <div class="form-group row">
            <button class="btn btn-default" type="submit">Media</button>
        </div>
    </form>
    @if (ViewData["Average"] != null)
    {
        <label>Media: @string.Format("{0:C2}", ViewData["Average"])</label>        
    }
</div>